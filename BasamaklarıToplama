import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int total = 0;

        System.out.println("Bir sayı giriniz: ");
        int x = input.nextInt();

        while (x > 0) {
            total += x % 10;
            x /= 10;
        }
        System.out.println("Girilen sayının basamaklarının toplamı : " + total);
    }
}
