import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int n;
        System.out.println("Bir sayÄ± girin: ");
        n = input.nextInt();

        for (int i = 0; i < n/2; i++) {
            for (int j = 1; j <= (n/2) -i; j++) {
                System.out.print(" ");
            }
            for (int k = 1; k <= (2 * i) - 1; k++) {
                System.out.print("*");
            }
            System.out.println();
        }

        for (int i = (n/2) - 1; i >= 1; i--) {
            for (int j = 1; j <= (n/2) - i; j++) {
                System.out.print(" ");
            }
            for (int k = 1; k <= 2 * i - 1; k++) {
                System.out.print("*");
            }
            System.out.println();
        }

    }
}
